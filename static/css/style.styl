
transition()
	-ms-transition all .2s ease-in-out
	-moz-transition all .2s ease-in-out
	-o-transition all .2s ease-in-out
	-webkit-transition all .2s ease-in-out
	transition all .2s ease-in-out
border-radius()
	-ms-border-radius arguments
	-moz-border-radius arguments
	-o-border-radius arguments
	-webkit-border-radius arguments
	border-radius arguments
box-sizing()
	-ms-box-sizing border-box
	-moz-box-sizing border-box
	-o-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing border-box
*
	border 0	
	margin 0
	padding 0
body,html
	background #404040
	height 100%	
section
	background transparent
	box-sizing()
	font normal normal 14px arial
	height 100%
	margin 0 auto
	padding 5px
	position relative
	width 100%

.form-signin
	background rgba(11,222,221,.8)
	border-radius(6px)
	color white	
	margin-top -240px
	margin-left -150px
	padding 0
	position fixed
	left 50%
	text-align center
	width 300px
	z-index 100
	h2
		background rgba(11,222,221,.9)
		border-radius(5px 5px 0 0)
		box-sizing()
		display block
		padding 3px	
		width 100%
		top 0
	.wrap_form_signin
		padding 10px
		input[type=text]
			border 2px solid turquoise 
			border-radius(4px)
			display block
			font normal normal 16px arial
			margin 0 auto
			margin-bottom 4px
			outline none
			padding 5px
		button
			background #933493
			color white
			cursor pointer
			font bold normal 14px arial
			padding 4px 7px
			&:hover
				background lighten(#933493, 20%)

.content_top
	background #46473D
	border 1px solid #E1E2DE
	border-radius 6px
	.nameUsuario
		color white
		font-weight bold
		display inline-block
		padding 5px
	.signOut
		background #008080
		color white
		cursor pointer
		font bold normal 12px helvetica
		padding 5px
		right 0
		transition()
		&:hover
			background #005959
	.countChar
		background #616354
		border 1px solid transparent
		border-top 0
		border-radius 0 0 6px 6px
		color red
		padding 5px
		text-shadow 0px 1px rgba(0,0,0,.5)

.form_messageIn .inputMessage
	background #616354
	border 1px solid transparent
	border-top-color #6F6F6F
	border-bottom 0
	box-sizing()
	color white
	font normal normal 14px arial
	margin 0 auto
	outline none
	padding 7px
	padding-bottom 10px
	position relative
	width 100%

.box_priv
	background darken(turquoise, 30%)
	border 1px solid darken(turquoise, 60%)
	border-radius(5px)
	box-sizing()
	box-shadow 0 0 3px rgba(0,0,0,.2)
	color white
	display none
	font bold normal 16px helvetica
	left 50%
	margin-top -450px
	margin-left -150px
	padding 0
	position fixed
	width 300px
	z-index 100
	label
		background darken(turquoise, 60%)
		box-sizing()
		display block
		padding 3px	
		width 100%
		top 0
	form
		box-sizing()
		padding 10px
		width 100%
		input
			background crimson
			cursor pointer
			color white
			display block
			font-weight bold
			margin 5px auto
			padding 5px
			width 100px
			&:hover
				background lighten(crimson, 20%) 
		span
			display block
			width 100%
		textarea
			box-sizing()
			border-radius(4px)
			color lighten(black, 45%)
			display block
			font normal normal 16px arial
			padding 5px
			resize none
			width 100%
	

