			right 0
			top 0
		.divUser
			font-weight bold
			color cyan
			text-shadow 0px 1px rgba(0,0,0,.7)
		.divMessage
			word-wrap break-word
	.messageWrap_Mio
		background #616161	

.content_options	
	width 100%
	.optionMessages, .optionUsers, .optionPrivates
		border-right thin solid #dadada
		color white
		cursor pointer
		display inline-block
		font bold normal 12px arial
		padding 2px 5px 3px 2px
		transition()
		&:hover
			background #068AEC

.content_users
	background #6B6B6B
