	box-shadow 0 0 7px rgba(0,0,0,.7)
	border-radius(4px)
	height 70%
	margin 0 auto
	width 100%
	.messageWrap
		background #4F4F4F
		border-bottom 1px solid #696969		
		border-bottom 1px solid #696969
		box-sizing()
		color white
		padding 5px
		position relative
		width 100%
		.divTime
			font-size 12px
